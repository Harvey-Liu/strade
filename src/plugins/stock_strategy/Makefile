$(PLUGIN) : stock_init.o stock_logic.o stock_basic_info.o stock_db.o stock_factory.o config.o basictypes.o\
	stock_user_mgr.o Observer.o Subject.o ObserverTest.o OffLineVisitStockObserver.o stock_packet_process.o packet_process.o \
	CustomWeightObserver.o StockholderInfo.o ExtAttribute.o DateUtil.o IndustryStockHotRank.o HoldingStock.o StockAccount.o StockAccountManager.o Strategy.o ChaliStrategy.o HotRankOneHundredStrategy.o HotRankFiftyHundredStrategy.o stock_proto_buf.o proto_buf.o\
